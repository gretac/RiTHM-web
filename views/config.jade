div.well(ng-controller='ConfigController')
  form.form-horizontal

    div.row
      div.col-md-8
        div.form-group
          label(for='specs', class=['col-sm-4', 'control-label']) Specifications:
          div.col-sm-8
            textarea.form-control(rows='3', ng-model='specs')

      div.col-md-4
        div.form-group
          label(for='logicalFormalism', class=['col-sm-4', 'control-label']) Logical Formalism:
          div.col-sm-8
            select.form-control(ng-model='logicalFormalism', ng-options="item for item in syntax")

        div.form-group
          label(for='monitorType', class=['col-sm-4', 'control-label']) Monitor Type:
          div.col-sm-8
            select.form-control(ng-model='monitorType', ng-options="item for item in monitor")

    div.row
      div.col-md-8
        div.form-group
          label(for='tracefile', class=['col-sm-4', 'control-label']) Execution trace file:
          div.col-sm-8
            input(type='file', ng-model='tracefile')
      div.col-md-4
          label(for='dataFormat', class=['col-sm-4', 'control-label']) Data Format:
          div.col-sm-8
            select.form-control(ng-model='dataFormat', ng-options="item for item in format")


    div.row
      div.col-md-8
        div.form-group
          div(class=['col-sm-offset-4', 'col-sm-8'])
            div.checkbox
              label
                input(type='checkbox', ng-model='useDefault')
                Use Default Predicate Evaluator

     div.row
      div.col-md-8
        div.form-group
          label(for='scriptfile', class=['col-sm-4', 'control-label']) Predicate Evaluator Script File:
          div.col-sm-8
            input(type='file', ng-model='scriptfile')

        div.form-group
          label(for='invCtrl', class=['col-sm-4', 'control-label']) Invocation Controller:
          div.col-sm-8
            select.form-control(ng-model='invCtrl', ng-options="item for item in invocator")

      div.col-md-4
        div.form-group
          label(for='evalType', class=['col-sm-4', 'control-label']) Evaluator Type:
          div.col-sm-8
            select.form-control(ng-model='evalType', ng-options="item for item in evaluator")

    hr

    div.col-sm-offset-4
      button(type='submit', class=['btn', 'btn-default']) Process
      button(type='submit', class=['btn', 'btn-default']) View Output
      button(type='submit', class=['btn', 'btn-default']) Save Configuration
      button(type='submit', class=['btn', 'btn-default']) Load Configuration
